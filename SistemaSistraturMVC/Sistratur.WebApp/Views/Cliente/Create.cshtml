@model Sistratur.Modelos.Modelos.Cliente

@{
    ViewBag.Title = "Crear Cliente";
}

<script type="text/javascript">
    function mostrar(id) {
        if (id == "True") {
            $("#Appellidos").show();
            $("#AppPaterno").show();
            $("#AppMaterno").show();
            $("#NroDocumento").val("");
            $("#NroDocumento").attr('maxlength', '8');
            $("#lblNombRazSoc").text("Nombres");
	    }
        if (id == "False") {
            $("#Appellidos").hide();
            $("#AppPaterno").hide();
            $("#AppMaterno").hide();
            $("#AppPaterno").val("");
            $("#AppMaterno").val("");
            $("#NroDocumento").val("");
            $("#NroDocumento").attr('maxlength', '11');
            $("#lblNombRazSoc").text("Razon Social");
	    }
    }

    function ValidateNumber(evt) {
