@model IEnumerable<Sistratur.Modelos.Modelos.Cliente>

@{
    ViewBag.Title = "Index";
}

<br />
<h2>Lista de Clientes</h2>
<hr />

<div class="panel-body">
    <table class="table table-condensed table-striped">
        <tr class="info text-primary" style="font-size:12.5px; text-align:center">
            <th>
                Tipo
            </th>
            <th>
                Número
            </th>
            <th>
                Denominación
            </th>
            <th>
                Celular
            </th>
            <th>
                Teléfono
            </th>
            <th>
                Dirección
            </th>
            <th>
                E-mail
            </th>
            <th>
                Fecha Registro
            </th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @(item.TipoDocumento == true ? "DNI" : "RUC")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NroDocumento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NombresRazonSocial) @Html.DisplayFor(modelItem => item.AppPaterno) @Html.DisplayFor(modelItem => item.AppMaterno)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Celular)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefono)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Direccion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaRegistro, "{0:dd/MM/yyyy}")
                </td>
            </tr>
        }
    </table>
</div>
