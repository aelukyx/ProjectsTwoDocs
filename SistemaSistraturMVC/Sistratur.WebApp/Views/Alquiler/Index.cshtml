@model IEnumerable<Sistratur.Modelos.Modelos.Alquiler>

@{
    ViewBag.Title = "Index";
}

<br />
<h2>Lista de Alquileres</h2>
<hr />

<div class="panel-body">
    <table class="table table-condensed table-striped">
        <tr class="info text-primary" style="font-size:12.5px; text-align:center">
            <th>
                @Html.DisplayNameFor(model => model.Cliente.NroDocumento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Conductor.NombreCompleto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PerfilUsuario.Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vehiculo.Placa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaRegistro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HoraRegistro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LugarReferencia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NroDias)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Montodia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MontoTotal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Observaciones)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaInicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaFin)
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Cliente.NombresRazonSocial) @Html.DisplayFor(modelItem => item.Cliente.AppPaterno) @Html.DisplayFor(modelItem => item.Cliente.AppMaterno)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Conductor.NombreCompleto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PerfilUsuario.Username)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Vehiculo.Placa)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaRegistro)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HoraRegistro)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LugarReferencia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NroDias)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Montodia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MontoTotal)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Observaciones)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaInicio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaFin)
                </td>
            </tr>
        }
    </table>
</div>
